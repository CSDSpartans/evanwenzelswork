import random
answers = ["Yes", "No", "Maybe","Ask your mother.", "I'd rather not say", "Ofcourse!", "Probably", "I highly doubt it"]
from termcolor import colored


#MAGIC 8 BALL

def game():
    print(colored("Welcome to the Magic 8 Ball!", 'yellow', attrs=['bold']))
    input(colored("What is your question? >>>", 'yellow', attrs=['bold']))
    answer=random.choice(answers)
    print(colored(answer, 'yellow', attrs=['bold']))
    #print(answers[7])

try:
    while True:
        game()
    
except(KeyboardInterrupt):
    print(colored("Thanks for playing!", 'yellow', attrs=['bold']))
    exit
