#Make 4 documents with the poem starting on line 8, name them 1, 2, 3, and 4.

name_of_mydocument = input("What do you want to read? Type 1, 2, 3, or 4:")
file_input = open(name_of_mydocument, 'r')     #open file for reading
line_counter = 0



line = file_input.readline()
line = file_input.readline()
line = file_input.readline()
line = file_input.readline()
line = file_input.readline()
line = file_input.readline()
line = file_input.readline()
line = file_input.readline()


while line != '': # while not end of file
    line_counter += 1
    print(line_counter, line, end = '')              # don't print another new line
    line = file_input.readline()

file_input.close()
